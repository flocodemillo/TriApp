<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" >

<TextView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flowchart_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:padding="16dp" android:textIsSelectable="true"
    tools:context="es.usc.citius.triapp.fragments.FlowChartDescriptionFragment" />

<Button
    android:layout_below="@+id/flowchart_detail"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="19dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button_start"
    android:onClick="startTriage"
    android:id="@+id/triar"/>


</RelativeLayout>